{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"],
      "#/test/*": ["./test/*"]
    },
    "rootDir": ".",
    "strict": true,
    "target": "es2017"
  },
  "include": ["**/*.ts", "**/*.js", ".eslintrc.js"],
  "types": ["jest", "node"]
}
